<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms">
  <h:head>
    <h:title>Rapid Diagnostic Toolkit Demo</h:title>
    <model>
      <itext>
        <translation lang="en">
          <text id="/rdtoolkit-provision/data/contact/_id:label">
            <value>What is the patient's name?</value>
          </text>
          <text id="/rdtoolkit-provision/data/patient_id:label">
            <value>Patient ID</value>
          </text>
          <text id="/rdtoolkit-provision/data/patient_name:label">
            <value>Patient name</value>
          </text>
          <text id="/rdtoolkit-provision/data/rdtoolkit_session_id:label">
            <value>Session ID</value>
          </text>
          <text id="/rdtoolkit-provision/data/rdtoolkit_state:label">
            <value>Status</value>
          </text>
          <text id="/rdtoolkit-provision/data/rdtoolkit_time_resolved:label">
            <value>Results available on</value>
          </text>
          <text id="/rdtoolkit-provision/data/rdtoolkit_time_started:label">
            <value>Started on</value>
          </text>
        </translation>
      </itext>
      <instance>
        <rdtoolkit-provision id="rdtoolkit-provision" prefix="J1!rdtoolkit-provision!" delimiter="#" version="2021-05-12 06:38:55">
          <data>
            <source tag="hidden">user</source>
            <contact tag="hidden">
              <_id/>
              <name/>
              <patient_id/>
            </contact>
            <patient_id/>
            <patient_name/>
            <rdtoolkit_session_id tag="hidden"/>
            <rdtoolkit_state/>
            <rdtoolkit_time_started/>
            <rdtoolkit_time_resolved/>
            <rdtoolkit_filter tag="hidden">mal_pf</rdtoolkit_filter>
            <rdtoolkit_api_url tag="hidden"/>
          </data>
          <patient_uuid tag="hidden"/>
          <meta tag="hidden">
            <instanceID/>
          </meta>
        </rdtoolkit-provision>
      </instance>
      <instance id="contact-summary"/>
      <bind nodeset="/rdtoolkit-provision/data" relevant="./source = 'user'"/>
      <bind nodeset="/rdtoolkit-provision/data/source" type="string"/>
      <bind nodeset="/rdtoolkit-provision/data/contact/_id" type="db:person"/>
      <bind nodeset="/rdtoolkit-provision/data/contact/name" type="string"/>
      <bind nodeset="/rdtoolkit-provision/data/contact/patient_id" type="string"/>
      <bind nodeset="/rdtoolkit-provision/data/patient_id" type="string" calculate="../contact/patient_id" required="true()"/>
      <bind nodeset="/rdtoolkit-provision/data/patient_name" type="string" calculate="../contact/name"/>
      <bind nodeset="/rdtoolkit-provision/data/rdtoolkit_session_id" type="string" required="true()"/>
      <bind nodeset="/rdtoolkit-provision/data/rdtoolkit_state" type="string"/>
      <bind nodeset="/rdtoolkit-provision/data/rdtoolkit_time_started" type="string"/>
      <bind nodeset="/rdtoolkit-provision/data/rdtoolkit_time_resolved" type="string"/>
      <bind nodeset="/rdtoolkit-provision/data/rdtoolkit_filter" type="string" required="true()"/>
      <bind nodeset="/rdtoolkit-provision/data/rdtoolkit_api_url" type="string"/>
      <bind nodeset="/rdtoolkit-provision/patient_uuid" type="string" calculate="../data/contact/_id" required="true()"/>
      <bind nodeset="/rdtoolkit-provision/meta/instanceID" type="string" readonly="true()" calculate="concat('uuid:', uuid())"/>
    </model>
  </h:head>
  <h:body class="pages">
    <group appearance="field-list rdtoolkit-provision" ref="/rdtoolkit-provision/data">
      <group appearance="rdtoolkit-action-btn" ref="/rdtoolkit-provision/data/contact">
        <input appearance="db-object" ref="/rdtoolkit-provision/data/contact/_id">
          <label ref="jr:itext('/rdtoolkit-provision/data/contact/_id:label')"/>
        </input>
      </group>
      <input appearance="hidden" ref="/rdtoolkit-provision/data/rdtoolkit_session_id">
        <label ref="jr:itext('/rdtoolkit-provision/data/rdtoolkit_session_id:label')"/>
      </input>
      <input appearance="hidden" ref="/rdtoolkit-provision/data/rdtoolkit_state">
        <label ref="jr:itext('/rdtoolkit-provision/data/rdtoolkit_state:label')"/>
      </input>
      <input appearance="hidden" ref="/rdtoolkit-provision/data/rdtoolkit_time_started">
        <label ref="jr:itext('/rdtoolkit-provision/data/rdtoolkit_time_started:label')"/>
      </input>
      <input appearance="hidden" ref="/rdtoolkit-provision/data/rdtoolkit_time_resolved">
        <label ref="jr:itext('/rdtoolkit-provision/data/rdtoolkit_time_resolved:label')"/>
      </input>
      <input appearance="hidden" ref="/rdtoolkit-provision/data/rdtoolkit_filter"/>
      <input appearance="hidden" ref="/rdtoolkit-provision/data/rdtoolkit_api_url"/>
    </group>
  </h:body>
</h:html>
